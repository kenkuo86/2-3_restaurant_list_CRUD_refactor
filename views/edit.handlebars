<div class="container mt-3">
  <form action="/restaurant/{{restaurant._id}}?_method=PUT" method="POST" id="form" novalidate>
    <div class="form-group">
      <label for="name">餐廳名稱 Name</label>
      <input type="text" name="name" class="form-control" id="name" placeholder="輸入餐廳名稱" value="{{restaurant.name}}" required>
      <div class="valid-feedback"></div>
      <div class="invalid-feedback">
        請輸入餐廳名稱
      </div>
    </div>
    <div class="form-group">
      <label for="name_en">餐廳英文名稱 English Name</label>
      <input type="text" name="name_en" class="form-control" id="name_en" placeholder="輸入餐廳英文名稱" value="{{restaurant.name_en}}" required>
      <div class="valid-feedback"></div>
      <div class="invalid-feedback">
        請輸入餐廳英文名稱
      </div>
    </div>
    <div class="form-group">
      <label for="category">餐廳類別 Category</label>
      <input type="text" name="category" class="form-control" id="category" placeholder="輸入餐廳類別" value="{{restaurant.category}}" required>
      <div class="valid-feedback"></div>
      <div class="invalid-feedback">
        請輸入餐廳類別
      </div>
    </div>
    <div class="form-group">
      <label for="image">餐廳照片 Image</label>
      <input type="url" name="image" class="form-control" id="image" placeholder="輸入餐廳照片連結" value="{{restaurant.image}}" required>
      <div class="valid-feedback"></div>
      <div class="invalid-feedback">
        請輸入餐廳照片連結
      </div>
    </div>
    <div class="form-group">
      <label for="location">餐廳地址 Location</label>
      <input type="text" name="location" class="form-control" id="location" placeholder="輸入餐廳地址" value="{{restaurant.location}}" required>
      <div class="valid-feedback"></div>
      <div class="invalid-feedback">
        請輸入餐廳地址
      </div>
    </div>
    <div class="form-group">
      <label for="phone">餐廳聯絡電話 Phone</label>
      <input type="tel" name="phone" class="form-control" id="phone" placeholder="輸入餐廳電話" value="{{restaurant.phone}}" required>
      <div class="valid-feedback"></div>
      <div class="invalid-feedback">
        請輸入餐廳電話
      </div>
    </div>
    <div class="form-group">
      <label for="google_map">Google map 連結 Google map link</label>
      <input type="url" name="google_map" class="form-control" id="google_map" placeholder="輸入餐廳 Google map 連結" value="{{restaurant.google_map}}" required>
      <div class="valid-feedback"></div>
      <div class="invalid-feedback">
        請輸入餐廳 Google map 連結
      </div>
    </div>
    <div class="form-group">
      <label for="rating">餐廳評分 Rating</label>
      <input type="text" name="rating" class="form-control" id="rating" placeholder="輸入餐廳評分" value="{{restaurant.rating}}" required>
      <div class="valid-feedback"></div>
      <div class="invalid-feedback">
        請輸入餐廳評分
      </div>
    </div>
    <div class="form-group">
      <label for="description">餐廳描述 Description</label>
      <textarea class="form-control" name="description" id="description" rows="5" required>{{restaurant.description}}</textarea>
      <div class="valid-feedback"></div>
      <div class="invalid-feedback">
        請輸入餐廳描述
      </div>
    </div>

    <button id="submit-button" type="submit" class="btn btn-primary">更新餐廳資訊</button>
  </form>
</div>